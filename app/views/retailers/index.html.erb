<%- model_class = Retailer -%>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_retailer_path,
            :class => 'btn btn-primary pull-right text-white', style: 'color:white' %>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @retailers.each do |retailer| %>
      <tr>
        <td><%= link_to retailer.id, retailer_path(retailer) %></td>
        <td><%= retailer.name %></td>
        <td><%=l retailer.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      retailer_path(retailer), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_retailer_path(retailer), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      retailer_path(retailer),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="pull-right">
  <%= paginate @retailers %>
</div>
